<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/littleMarginSize"
    android:id="@+id/linearLayoutRoot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/MiddleTextSize"
            android:background="@drawable/roundborder"
            android:id="@+id/timeStr"
            android:layout_margin="@dimen/littleMarginSize"
            android:padding="@dimen/borderRadius"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:text="@string/app_name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_margin="@dimen/littleMarginSize"
            android:layout_height="wrap_content"
            android:id="@+id/hideStr"
            android:textSize="@dimen/littleTextSize"
            android:text="@string/app_name"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/littleMarginSize"
            android:scaleType="fitCenter"
            android:id="@+id/icon"
            android:src="@mipmap/uparrow"/>

    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flexBoxLayout"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:alignContent="flex_start"
        app:showDivider="beginning|middle" />
</LinearLayout>
