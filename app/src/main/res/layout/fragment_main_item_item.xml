<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/littleMarginSize"
    android:layout_marginBottom="@dimen/littleMarginSize"
    android:paddingStart="@dimen/littleMarginSize"
    android:paddingEnd="@dimen/littleMarginSize"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/habitIcon"
        app:civ_circle_background_color="@color/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:id="@+id/habitComplete"
        android:src="@mipmap/right"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/habitIcon"
        android:layout_alignStart="@id/habitIcon"
        android:layout_alignEnd="@id/habitIcon"
        android:layout_alignBottom="@id/habitIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/habitName"
        android:textAlignment="center"
        android:layout_below="@id/habitIcon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/MiddleTextSize"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/completeInfo"
        android:layout_below="@id/habitName"
        android:textSize="@dimen/littleTextSize"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
